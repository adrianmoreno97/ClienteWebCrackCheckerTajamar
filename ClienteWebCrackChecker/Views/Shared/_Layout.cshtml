
<!DOCTYPE html>
<html>
<head>
    <title>CrackChecker ES</title>
    <meta charset="UTF-8">
    <meta name="description" content="Crack Checker ES">
    <meta name="keywords" content="crack,gGaming, magazine, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Favicon -->
    <link href="~/Assets/images/favicon.png" rel="shortcut icon" />

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,400i,500,500i,700,700i,900,900i" rel="stylesheet">

    <!-- Stylesheets -->

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/slicknav.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body>
    <header class="header-section">
        <div class="header-warp">
            <div class="header-social d-flex justify-content-end">
                <p>Redes sociales:</p>
                <a href="https://www.linkedin.com/in/adrianmorenogallardo/" target="_blank"><i class="fa fa-linkedin"></i></a>
                <a href="https://www.facebook.com/colegiotajamar/" target="_blank"><i class="fa fa-facebook"></i></a>
                <a href="https://twitter.com/ColegioTajamar" target="_blank"><i class="fa fa-twitter"></i></a>
            </div>
            <div class="header-bar-warp d-flex">
                <!-- site logo -->
                <a href="https://clientewebcrackchecker.azurewebsites.net/Juegos/Index" class="site-logo">
                    <img src="~/images/logo.png" width="180" height="80" alt="" style="position:relative; top: -32px">
                </a>
                <nav class="top-nav-area w-100">
                    <div class="user-panel">
                        @if (Context.User.Identity.IsAuthenticated)
                            {
                                <partial name="_UsuarioConectado"/>
                            }
                            else
                            {
                                <span>@Html.ActionLink("Iniciar sesión", "Perfil", "Usuarios") / @Html.ActionLink("Registro", "Registro", "Manage")</span>
                            }
                    </div>
                    <!-- Menu -->
                    <ul class="main-menu primary-menu" style="position:relative; top: -5px; left:-2%">
                        <li>@Html.ActionLink("Inicio", "Index", "Juegos")</li>
                        @if (Context.User.Identity.IsAuthenticated)
                            {
                                <li>@Html.ActionLink("Lista de deseados", "ListaUsuario", "Usuarios", new { id = int.Parse(Context.User.FindFirst("Id").Value) }, null)</li>
                            }
                            @if (Context.User.IsInRole("Administrador"))
                            {
                                <li>@Html.ActionLink("Administración", "ListadoUsuarios", "Administracion")</li>
                            }
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <section class="blog-section spad" style="min-height:65%; height:auto">
        <div class="container">
            @RenderBody()
        </div>
    </section>
    <footer class="footer-section">
        <div class="container">
            <div class="footer-left-pic">
                <img src="~/images/footer-left-pic.png" alt="">
            </div>
            <div class="footer-right-pic">
                <img src="~/images/footer-right-pic.png" alt="">
            </div>
            <a href="#" class="footer-logo">
                <img src="~/images/logo.png" width="300" height="120" alt="">
            </a>
            <ul class="main-menu footer-menu" style="margin-left:12%">
                <li>@Html.ActionLink("Inicio", "Index", "Juegos")</li>
                <li>@Html.ActionLink("Registro", "Registro", "Manage")</li>
                @if (Context.User.Identity.IsAuthenticated)
                {
                    <li>@Html.ActionLink("Lista de deseados", "ListaUsuario", "Usuarios", new { id = int.Parse(Context.User.FindFirst("Id").Value) }, null)</li>
                }
                @if (Context.User.IsInRole("Administrador"))
                {
                    <li>@Html.ActionLink("Administración", "ListadoUsuarios", "Administracion")</li>
                }
            </ul>
            <div class="footer-social d-flex justify-content-center">
                <a href="https://www.linkedin.com/in/adrianmorenogallardo/" target="_blank"><i class="fa fa-linkedin"></i></a>
                <a href="https://www.facebook.com/colegiotajamar/" target="_blank"><i class="fa fa-facebook"></i></a>
                <a href="https://twitter.com/ColegioTajamar" target="_blank"><i class="fa fa-twitter"></i></a>
            </div>
            <div class="copyright"><a href="https://www.linkedin.com/in/adrianmorenogallardo/">Adrian Moreno Gallardo</a> 2020 Todos los derechos reservados</div>
            <div class="copyright">Proyecto realizado gracias a la API de <a href="https://www.crackwatch.com">CrackWatch</a></div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
